%article
  %p
    = link_to item.content, item.content, target: '_blank'
  %div{id: "likes-#{item.id}"}
    = render partial: 'items/likes', locals: {item: item}
  %div{id: "discussion-#{item.id}"}
    - discussions[item.id].each do |d|
      %p
        = d.content
        %br
        %small= d.created_at
  = render partial: 'discussions/discussion', locals: {item_id: item.id, value: 'world', discussion: discussion, list_id: list_id}