- provide(:title, 'Log in')
.row
  .columns.six
    %h1 Login

    = form_for :session, url: login_path do |f|

      = f.label :email
      = f.email_field :email, class: 'u-full-width'

      = f.label :password
      = f.password_field :password, class: 'u-full-width'

      = f.label :remember_me, class: "checkbox inline" do
        = f.check_box :remember_me
        %span remember me on this computer

      = f.submit "Log in", class: 'button button-primary'

    %p New user? #{link_to 'Sign up now!', signup_path }