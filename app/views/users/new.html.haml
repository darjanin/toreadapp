- provide(:title, 'Sign up')

.columns.six
  %h1 Sign up

  = form_for @user do |f|
    = render 'shared/error_messages'

    = f.label :name
    = f.text_field :name, class: 'u-full-width'

    = f.label :email
    = f.email_field :email, class: 'u-full-width'

    = f.label :password
    = f.password_field :password, class: 'u-full-width'

    = f.label :password_confirmation, 'Confirmation'
    = f.password_field :password_confirmation, class: 'u-full-width'

    %div= f.submit 'Create my account', class: 'button button-primary'
